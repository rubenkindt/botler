  <!-- the thermal detector -->
  <node name = "thermal_detector" pkg = "thermal_detector" type = "thermal_detector.py" output = "screen" respawn = "true" />

  <!-- the color detector -->
  <node name = "color_detector" pkg = "color_detect" type = "detect_color.py" output = "screen" respawn = "true" />

  <!-- the rosbridge server -->
	<!-- DIT WORDT NORMAAL OPGESTART MET ROSLAUNCH, COMMANDO BIJ TYPE IN TWIJFEL... -->
  <node name = "rosbridge_suite" pkg = "rosbridge_suite/rosbridge_server" type = "rosbridge_websocket.launch" output = "screen" respawn = "true" />

  <!-- the live video server -->
	<!-- DIT WORDT NORMAAL OPGESTART MET ROSRUN, COMMANDO BIJ TYPE IN TWIJFEL... -->
  <node name = "web_video_server" pkg = "web_video_server" type = "web_video_server" output = "screen" respawn = "true" />

  <!-- the web hosted dashboard -->
	<!-- DIT IS NOG GEEN CATKIN PACKAGE -->
  <node name = "dashboard" pkg = "dashboard" type = "server.py" output = "screen" respawn = "true" />
</launch>
